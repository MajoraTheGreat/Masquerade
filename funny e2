@name funny e2
interval(10)
Atk = owner():keyAttack1()
Wpn = owner():weapon():type()
if (Atk & Wpn == "weapon_crowbar") {
    timer("Sound",700)
    if (clk("Sound") | changed(Atk)) {
        owner():soundPlay(1,0.7,"vo/npc/male01/hacks0"+randint(1,2)+".wav")
        soundPitch(1,165)
    }
} else {soundStop(1)}

